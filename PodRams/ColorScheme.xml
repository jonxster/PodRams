<?xml version="1.0" encoding="UTF-8"?>
<!--
  PodRams Color Scheme
  --------------------
  This file drives every color used by the app. Adjust the hex codes below ("#RRGGBB")
  to tweak the palette without touching Swift code. Provide both light and dark entries so
  the UI stays consistent across appearances.

  Color tokens:
    background        – Main window background layer.
    surface           – Cards and primary surfaces (player chrome, sheets, etc.).
    hoverSurface      – Highlight/hover state for interactive rows or controls.
    toolbarBackground – Backdrop for the title/toolbar area.
    accent            – Brand accent used for active controls and highlights.
    primaryText       – Primary text color.
    secondaryText     – Secondary/descriptive text color.
-->
<ColorScheme>
  <Mode name="light">
    <Color name="background" value="#FFFFFF"/>
    <Color name="surface" value="#FFFFFF"/>
    <Color name="hoverSurface" value="#E2E8EE"/>
    <Color name="toolbarBackground" value="#FFFFFF"/>
    <Color name="accent" value="#007AFF"/>
    <Color name="primaryText" value="#1C1C1E"/>
    <Color name="secondaryText" value="#5F6368"/>
  </Mode>

  <Mode name="dark">
    <Color name="background" value="#0F0F0F"/>
    <Color name="surface" value="#171C21"/>
    <Color name="hoverSurface" value="#1F262C"/>
    <Color name="toolbarBackground" value="#0F0F0F"/>
    <Color name="accent" value="#55D1FF"/>
    <Color name="primaryText" value="#FFFFFF"/>
    <Color name="secondaryText" value="#B5C0C9"/>
  </Mode>
</ColorScheme>
